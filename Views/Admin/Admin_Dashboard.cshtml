@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CappyPop_Full_HTML.Models.ManagerAdmin.AdminDashboardViewModel
<main>
<section class="admin-dashbroad section">
    <div class="container">
        <div class="row">




            <!-- Start Main Content -->
            <div class="col-lg-9">
                <section class="home-section">

                    <div class="home-title">
                        <h1>My Dashbroad</h1>
                    </div>

                    <!-- Start Dashbroad Info Cards -->
                    <section class="dashbroad-card">
                        <div class="container">
                            <div class="row align-items-center">
                                <!-- single-info-card -->
                                <div class="col-lg-4 col-12 ">
                                    <div class="single-card">

                                        <div class="content">
                                            <h4>Total Order</h4>
                                            <h3>@Model.TotalOrders</h3>
                                        </div>
                                        <i class="icofont-papers"></i>

                                    </div>
                                </div>
                                <!--/End single-info-card -->
                                <!-- single-info-card -->
                                <div class="col-lg-4 col-12 ">
                                    <div class="single-card">

                                        <div class="content">
                                            <h4>Total Sale</h4>
                                            <h3>@Model.TotalRevenue VND</h3>
                                        </div>
                                        <i class="icofont-money"></i>

                                    </div>
                                </div>
                                <!--/End single-info-card -->
                                <!-- single-info-card -->
                                <div class="col-lg-4 col-12 ">
                                    <div class="single-card">

                                        <div class="content">
                                            <h4>Notifications</h4>
                                            <h3>26</h3>
                                        </div>
                                        <i class="icofont-notification"></i>

                                    </div>
                                </div>
                                <!--/End single-info-card -->
                            </div>

                        </div>
                    </section>
                    <!--/ End Dashbroad Info Cards -->

                    <div class="row">
                        <div class="col-lg-8">
                            <div class="home-title">
                                <h1>Product Manage</h1>
                            </div>
                        </div>
                        <div class="col-lg-4" style="transform: translateY(26px);">
                            <div class="search">
                                <input type="text" class="input" placeholder="Search Boba"
                                    onmouseout="this.value =''; this.blur();">
                                <a class="button" type="submit"><i class="icofont-search-2"></i></a>
                            </div>
                        </div>
                    </div>

                    <!-- Start Boba Edit Listing -->
                    <section class="boba-edit-list">
                        <div class="container">
                            <div class="row">

                    @foreach (var boba in Model.BobaTeas)
                    {
                <div class="col-lg-12">
                    <div class="single-edit-list">
                        <div class="row align-items-center">
                            <div class="col-lg-3">
                                <img class="product-image" src="@boba.PrimaryImage" alt="@boba.BobaName" />
                            </div>
                            <div class="col-lg-6">
                                <h5>@boba.BobaName</h5>
                                <h6>@boba.Price Ä‘</h6>
                                <p>@boba.BobaDescription</p>
                                
                            </div>
                            <div class="col-lg-3">
                                <div class="button">
                                    <a onclick="window.location.href='/admin/editbobatea/@boba.BobaId'" class="btn">Edit Boba</a>
                                    <a href="#" class="btn primary">Delete Boba</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
                                    </div>
                                </div>
                                <!-- End Single Edit Listing -->


                    </section>
                    <!-- End Boba Edit Listing -->


                </section>
            </div>

        </div>
    </div>
</section>
</main>